<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2021"

    android:backgroundTint="#1B2021"
    android:backgroundTintMode="src_in"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="100dp"
        android:background="#1B2021"
        android:backgroundTint="#1B2021"
        android:gravity="bottom|end"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pantalla2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="230dp"
        android:background="#1B2021"
        android:backgroundTint="#1B2021"
        android:gravity="bottom|end"
        android:text="0"
        android:textColor="#B1B1B1"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/operaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantalla">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/L789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Bot_7"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="7"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_8"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="8"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_9"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="9"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/sqrt"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="#810C0C"
                    android:text="Sqrt"
                    app:strokeColor="#330036" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/L456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Bot_4"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="4"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_5"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="5"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_6"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="6"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/cuadrado"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#810C0C"
                    android:text="x2"
                    app:strokeColor="#330036" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/L123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Bot_1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="1"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="2" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="3"
                    app:strokeColor="#330036" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/decimal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:backgroundTint="#810C0C"
                    android:text="."
                    app:strokeColor="#330036" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bot_AC"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#810C0C"
                    android:text="AC" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Bot_0"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:backgroundTint="#EA638C"
                    android:text="0" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bot_igual"
                    android:layout_width="wrap_content"
                    android:layout_height="90sp"
                    android:backgroundTint="#810C0C"
                    android:lineSpacingExtra="20sp"
                    android:text="=" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bot_C"
                    android:layout_width="wrap_content"
                    android:layout_height="90sp"
                    android:layout_weight="1"
                    android:backgroundTint="#810C0C"
                    android:lineSpacingExtra="20sp"
                    android:text="C" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/operaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/pantalla2">

        <Button
            android:id="@+id/Dividir"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="#810C0C"
            android:contentDescription=",/,"
            android:text="/"
            app:strokeColor="#330036" />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Multiplicar"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="#810C0C"
            android:text="*"
            app:strokeColor="#330036" />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/restar"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="#810C0C"
            android:text="-"
            app:strokeColor="#330036" />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Sumar"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="#810C0C"
            android:text="+"
            app:strokeColor="#330036" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>